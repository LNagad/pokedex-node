<div class="col-lg-10 offset-lg-1">
    <div class="d-flex flex-wrap">
        <h2 class="w-75 text-center">Regions</h2>
        <a class="btn btn-primary" href="/create-region">Create new region</a>
    </div>

    <div class="d-flex mt-5 w-100">
        {{#if hasRegions}}
        {{#each regions as |region| }}
            <div class="card me-2 col-3" >
                <div class="card-body">
                    <h5 class="card-title mb-3">{{region.name}}</h5>
                    <a 
                        class="btn btn-outline-primary" 
                        href="/edit-region/{{region.id}}?edit=true">Edit
                    </a>
                    <a 
                        class="btn btn-outline-danger" 
                        href="/delete-region/{{region.id}}">Delete
                    </a>
                </div>
            </div>
        {{/each}}
        {{else}}
        <h1>No regions found!</h1>
        {{/if}}
    </div>
</div>