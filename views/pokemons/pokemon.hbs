<div class="col-lg-10 offset-lg-1">
    <div class="d-flex flex-wrap">
        <h2 class="w-75 text-center">Pokemons</h2>
        <a class="btn btn-primary" href="/create-pokemon">Create a new pokemon</a>
    </div>

    <div class="d-flex mt-5 w-100 flex-wrap">
        {{#if hasPokemons}}

            {{#each pokemons as |pokemon| }}

            <div class="pokemon {{pokemon.pokemonType}}">
                <div class="img-container">
                    <img src="{{pokemon.imageUrl}}" alt="{{pokemon.name}}">
                </div>
                <div class="info">
                    <span class="number">{{pokemon.region}}</span>
                    <h3 class="name">{{pokemon.name}}</h3>
                    <small class="type">Type: <span>{{pokemon.pokemonType}}</span></small>
                    <div class="mt-2">
                        <a class="btn btn-outline-primary" href="/edit-pokemon/{{pokemon.id}}?edit=true">Edit</a>
                        <a id="delete-pokemon" 
                        class="btn btn-outline-danger" 
                        href="/delete-pokemon/{{pokemon.id}}">Delete
                        </a>
                    </div>
                </div>
            </div>

            {{/each}}
        {{else}}
            <h1>No pokemons found!</h1>
        {{/if}}
    </div>
</div>

