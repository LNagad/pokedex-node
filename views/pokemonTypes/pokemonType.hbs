<div class="col-lg-10 offset-lg-1">
    <div class="d-flex flex-wrap">
        <h2 class="w-75 text-center">Pokemon types</h2>
        <a class="btn btn-primary" href="/create-type">Create a new type</a>
    </div>

    <div class="d-flex mt-5 w-100">
        {{#if hasTypes}}

        {{#each types as |type| }}
            <div class="card me-2 col-3" >
                <div class="card-body">
                    <h5 class="card-title mb-3">{{type.name}}</h5>
                    <a 
                        class="btn btn-outline-primary" 
                        href="/edit-type/{{type.id}}?edit=true">Edit
                    </a>
                    <a id="delete-type" 
                        class="btn btn-outline-danger" 
                        href="/delete-type/{{type.id}}">Delete
                    </a>
                </div>
            </div>
        {{/each}}
        {{else}}
        <h1>No pokemons types found!</h1>
        {{/if}}
    </div>
</div>