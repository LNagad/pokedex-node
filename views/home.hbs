<div class="col-lg-12 ">

  <div class="d-flex">
    <div class="col-2 filter-container me-5 shadow-sm p-3">
      <h5 class="btn btn-dark mb-3">Filter regions</h5>
      <form class="h-100" method="post" action="/pokemon-filter">
        {{#each regions as |region| }}
        <div>
          <input class="form-check-input" type="radio" name="FilterId" value="{{region.id}}" id="{{region.name}}">
          <label class="form-check-label" for="{{region.name}}">{{region.name}}</label>
        </div>
        {{/each}}
        <div class="mt-4 bottomDiv">
          <button class="btn filterBtn " type="submit">Filter</button>
        </div>
      </form>
    </div>

    <div class="d-flex col-9 flex-wrap">
      {{#if hasPokemons}}
      {{#each pokemons as |pokemon| }}

      <div class="pokemon {{pokemon.pokemonType}}">
        <div class="img-container">
          <img src="{{pokemon.imageUrl}}" alt="{{pokemon.name}}">
        </div>
        <div class="info">
          <span class="number">{{pokemon.region}}</span>
          <h3 class="name">{{pokemon.name}}</h3>
          <small class="type">Type: <span>{{pokemon.pokemonType}}</span></small>
        </div>
      </div>

      {{/each}}
      {{else}}
      <h1>No pokemons found!</h1>
      {{/if}}
    </div>
  </div>
</div>